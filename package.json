{
  "name": "jtlt",
  "version": "0.4.0",
  "type": "module",
  "author": "Brett Zamir",
  "contributors": [],
  "license": "MIT",
  "types": "./dist/index.d.ts",
  "main": "src/index-node.js",
  "exports": {
    "types": "./dist/index.d.ts",
    "browser": {
      "import": "./src/index-browser.js"
    },
    "node": {
      "import": "./src/index-node.js"
    }
  },
  "engines": {
    "node": ">=22.16.0"
  },
  "homepage": "https://github.com/s3u/JSONPath/",
  "repository": {
    "type": "git",
    "url": "https://github.com/brettz9/jtlt.git"
  },
  "dependencies": {
    "jamilih": "0.62.1",
    "jhtml": "0.7.1",
    "jsdom": "27.1.0",
    "jsonpath-plus": "10.3.0",
    "simple-get-json": "10.0.0",
    "xpath2.js": "1.0.0-alpha-6"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@node-static/node-static": "^0.8.1",
    "@types/chai": "^5.2.3",
    "@types/jsdom": "^27.0.0",
    "@types/mocha": "^10.0.10",
    "c8": "^10.1.3",
    "chai": "^6.2.0",
    "eslint": "^9.39.1",
    "eslint-config-ash-nazg": "^39.8.0",
    "mocha": "^11.7.5",
    "open": "^10.2.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "start": "open http://localhost:8021/demo/ && static -p 8021",
    "prepublishOnly": "pnpm i && pnpm build",
    "attw": "attw --pack",
    "tsc": "tsc",
    "build": "tsc -p tsconfig-prod.json",
    "copy-simple-get-json": "cp -r node_modules/simple-get-json/dist/index-es.js demo/vendor/simple-get-json/dist/index-es.js",
    "copy-jhtml": "cp -Rf node_modules/jhtml/src demo/vendor/jhtml",
    "copy-jamilih": "cp node_modules/jamilih/dist/jml.mjs demo/vendor/jamilih/dist/jml.mjs",
    "copy-jsonpath-plus" :"cp node_modules/jsonpath-plus/dist/index-browser-esm.js demo/vendor/jsonpath-plus/dist/index-browser-esm.js",
    "copy": "npm run copy-simple-get-json && npm run copy-jhtml && npm run copy-jamilih && npm run copy-jsonpath-plus",
    "lint": "eslint .",
    "mocha": "mocha",
    "test:browser": "open http://localhost:8020/test/browser/ && static -p 8020",
    "test": "c8 npm run mocha"
  },
  "bugs": "https://github.com/brettz9/jtlt/issues",
  "description": "Uses an approach similar to [XSLT](https://www.w3.org/Style/XSL/) for declarative, linear declaration of templates, but with JSON or JavaScript object data sources. As with XSLT, can be transformed into different formats (e.g., HTML strings, JSON, DOM objects, etc.).",
  "keywords": [
    "xsl",
    "xslt",
    "json",
    "javascript"
  ]
}
