{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true
  },
  "include": ["*.js", "*.d.ts", "src/**/*.js", "test/*.js", "test.d.ts"],
  "exclude": ["node_modules", "./dist/**/*.js"]
}
