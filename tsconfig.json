{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true
  },
  "include": [
    "*.js", "*.d.ts", "src/**/*.js", "demo/**/*.js", "test/**/*.js",
    "typings/xpath2-js.d.ts"
  ],
  "exclude": ["node_modules", "./dist/**/*.js"]
}
